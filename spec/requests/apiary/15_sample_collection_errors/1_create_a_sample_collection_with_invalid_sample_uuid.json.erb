<%
require 'json'
h = {:header => [], :response_header => [] }
h[:method] = "POST"
h[:url] = '/sample_collections'
h[:header] << 'Accept: application/json'
h[:setup] = <<EOD
sample = Lims::ManagementApp::Sample.new({
    "sanger_sample_id" => "S2-1",
    "gender" => "Male",
    "sample_type" => "RNA",
    "taxon_id" => 9606,
    "common_name" => "human",
    "scientific_name" => "homo sapiens"
})

save_with_uuid sample => [1,2,3,4,6]
EOD
